{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"jsx": "react",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": true,
		"target": "es6",
		"allowJs": true
	},
	"include": ["./app/**/*"]
}
